<%= render "shared/navbar"%>


<div class="cocktails-container">
    <div class="cards-container">
        <% if @cocktails.any? %>
        <% @cocktails.each do |cocktail|%>
        <div class="card">
            <div><%= cl_image_tag cocktail.photo.key, id: "image_id"  if cocktail.photo.attached? %><h2><%= link_to cocktail.name, cocktail_path(cocktail), class: "card-text" %></h2>
            </div>
        </div>
        <% end %>
        <%end%>
    </div>
</div>